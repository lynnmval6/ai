<body>
    <div class="container">
        <h1>Welcome to the Course</h1>
        <p>This is your course homepage. Click the button below to view the course syllabus and get started with your learning journey.</p>
        
        <div class="welcome-message" id="welcomeMsg" style="display: none;">
            <p><strong>Great to see you here!</strong> Ready to explore the syllabus?</p>
        </div>
        
        <a href="syllabus.html" class="syllabus-btn" id="syllabusLink">
            View Syllabus
        </a>
    </div>

    <script>
        // Show welcome message after page loads
        window.addEventListener('load', function() {
            setTimeout(function() {
                document.getElementById('welcomeMsg').style.display = 'block';
            }, 1000);
        });

        // Add click event to syllabus button
        document.getElementById('syllabusLink').addEventListener('click', function(e) {
            // Check if syllabus.html exists (basic check)
            const link = this;
            
            // Add a loading effect
            link.innerHTML = 'Loading...';
            
            setTimeout(function() {
                // Reset button text if still on page
                if (document.getElementById('syllabusLink')) {
                    link.innerHTML = 'View Syllabus';
                }
            }, 2000);
        });

        // Add some interactivity to the page
        document.addEventListener('DOMContentLoaded', function() {
            const container = document.querySelector('.container');
            
            // Add a subtle animation when page loads
            container.style.opacity = '0';
            container.style.transform = 'translateY(20px)';
            
            setTimeout(function() {
                container.style.transition = 'all 0.6s ease';
                container.style.opacity = '1';
                container.style.transform = 'translateY(0)';
            }, 100);
        });

        // Add current date and time display
        function updateDateTime() {
            const now = new Date();
            const dateStr = now.toLocaleDateString();
            const timeStr = now.toLocaleTimeString();
            
            // You can uncomment the next lines if you want to show date/time
            // console.log(`Current date: ${dateStr}, Time: ${timeStr}`);
        }

        // Update time every minute
        setInterval(updateDateTime, 60000);
        updateDateTime(); // Initial call
    </script>
